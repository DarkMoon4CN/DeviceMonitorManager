@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑项目</title>
</head>
<body>
    <div style="padding: 15px; overflow: hidden">
        <form id="LocalInfoEditForm" method="post" action="">
            <table class="tableForm" width="100%">
                <tr>
                    <th>
                        项目编号：
                    </th>
                    <td>
                        <input type="text" name="txtSTCD" id="txtSTCD" class="easyui-validatebox textbox" readonly
                               data-options="required:true" style="width:170px;height:22px;" /><span style="color:gray;">不可更改</span>
                    </td>
                </tr>
                <tr>
                    <th>
                        项目名称：
                    </th>
                    <td>
                        <input type="text" name="txtNiceName1" id="txtNiceName1" class="easyui-validatebox textbox"
                               data-options="required:true" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        项目负责人：
                    </th>
                    <td>
                        <input type="text" name="txtLocaManager" id="txtLocaManager" class="easyui-validatebox textbox" data-options="required:true" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        联系人手机：
                    </th>
                    <td>
                        <input type="text" name="txtTel" id="txtTel" class="easyui-validatebox textbox" data-options="required:false,validType:'length[1,11]'" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        项目位置：
                    </th>
                    <td>
                        <input type="text" name="txtAddress1" id="txtAddress1" class="easyui-validatebox textbox" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        所在经度：
                    </th>
                    <td>
                        <input type="text" name="txtLongitude" id="txtLongitude" class="easyui-validatebox textbox" style="width:170px;height:22px;" />
                        <span style="color:gray;">小于180°</span>
                     </td>
                </tr>
                <tr>
                    <th>
                        所在纬度：
                    </th>
                    <td>
                        <input type="text" name="txtLatitude" id="txtLatitude" class="easyui-validatebox textbox" style="width:170px;height:22px;" />
                        <span style="color:gray;">小于180°</span>
                    </td>
                    </td>
                </tr>
                <tr>
                    <th>
                        海拔：
                    </th>
                    <td>
                        <input type="text" name="txtAltitude" id="txtAltitude" class="easyui-validatebox textbox" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        简介：
                    </th>
                    <td>
                        <textarea rows="3" cols="50" name="txtDescribe" id="txtDescribe" class="easyui-validatebox textbox" data-options="required:false"></textarea>
                    </td>
                </tr>
            </table>
        </form>
    </div>

</body>
</html>
